		write(nodes.console, "\nf_load1", 0.01)
		new_line()
		write(nodes.console, "\nf_load3", 0.01)
		new_line()
		write(nodes.console, "\nf_neuralNet", 0.01)
		new_line();	new_line()
		write(nodes.console, "\n\nStahuji zásuvné moduly", 0.05)
