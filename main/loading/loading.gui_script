		wait(0.3)
		gui.set_color(nodes.console, vmath.vector4(1, 0.5, 0.7, 1))
		wait(0.3)
		gui.set_color(nodes.console, vmath.vector4(1, 1, 1, 1))
		wait(0.3)
		gui.set_color(nodes.console, vmath.vector4(1, 0.5, 0.7, 1))
		wait(0.3)
		gui.set_color(nodes.console, vmath.vector4(1, 1, 1, 1))
